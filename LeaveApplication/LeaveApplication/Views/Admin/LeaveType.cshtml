
@{
    ViewBag.Title = "LeaveType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>LeaveType</h2>

@{
    ViewBag.Title = "Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!-- Modal for edit form-->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Edit</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("UpdateLeaveType", "Admin", FormMethod.Post))
            {
                <div class="modal-body">
                    <div class="form-group d-flex justify-content-center my-auto">
                        <input id="id" name="id" type="text" hidden />
                        <input id="edittxt" name="edittxt" type="text" class="form-control" value="Change me....." />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            }

        </div>
    </div>
</div>
@* ------------------------------------------ *@

<div id="div1" class="container" style="margin-top:5%">
    <div class="row  justify-content-center align-content-center">

        <div class="col-sm-6 col-md-6 col-lg-6  mb-3 ">
            <div class="card">
                <div class=" card-body">
                    <h5 class="card-title">Enter Leave Types</h5>
                    @using (Html.BeginForm("AddLeaveType", "Admin", FormMethod.Post))
                    {<div class="form-group d-flex  justify-content-center ">
                            <input type="text" name="LeaveType" class="form-control " placeholder="Leave Type" />
                            <input id="Submit1" class="btn btn-primary  ml-2" type="submit" value="Add Leave Type" />

                        </div>




                    }
                </div>
            </div>



        </div>
    </div>

    <div class="row">
        <div class="col">
            <table id="t1" class="table table-hover table-striped ">
                <thead>
                    <tr class="text-center">
                        <th scope="col">Leave Type</th>
                        <th class="text-right" scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{ IEnumerable<LeaveApplication.Models.LeaveTypes> d1 = ViewBag.leaves_t;
                        foreach (LeaveApplication.Models.LeaveTypes x in d1)
                        {
                            <tr class="text-center ">
                                <td class="text-info align-middle">@x.LeaveType</td>
                                <td class="align-middle">
                                    <div class="d-flex justify-content-end">
                                        <div class="btn-group">
                                            <button class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter" onclick="ModelOnclick(this.parentNode.parentNode.parentNode.parentNode,@x.LeaveTypeID)">Edit</button>
                                            <button class="btn btn-primary" onclick="document.getElementById('@x.LeaveTypeID').submit()">Delete</button>
                                        </div>
                                        @using (Html.BeginForm("DeleteLeaveType", "Admin", FormMethod.Post, new { id = x.LeaveTypeID }))
                                        {
                                            <input type="text" name="LeaveTypeID" value="@x.LeaveTypeID" hidden />

                                        }
                                    </div>

                                </td>
                            </tr>
                        }
                    }



                </tbody>
            </table>
        </div>

    </div>

</div>



