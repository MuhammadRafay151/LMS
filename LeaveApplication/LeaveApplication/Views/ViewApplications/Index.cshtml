
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/EmpProfileLayOut.cshtml";
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script>

</script>
<div class="container-fluid">
    <div class="row vh-100">
        <div class="col">
            <h1 class=" text-white" style=" margin-top:10% ;margin-bottom:5%;text-align:center">Leave Applications</h1>
            @*material theme*@
            <div class="card card-nav-tabs card-plain "style="margin-bottom:0%">
                <div class="card-header card-header-info">
                    <!-- colors: "header-primary", "header-info", "header-success", "header-warning", "header-danger" -->
                    <div class="nav-tabs-navigation">
                        <div class="nav-tabs-wrapper">
                            <ul class="nav nav-tabs" data-tabs="tabs">
                                <li class="nav-item">
                                    @Ajax.ActionLink("All", "ALL", null, new AjaxOptions
              {
                  HttpMethod = "GET",
                       UpdateTargetId = "div1",
                       InsertionMode = InsertionMode.Replace
              }, new { @class = "nav-link", data_toggle = "tab" })
                                </li>
                                <li class="nav-item">
                                    @Ajax.ActionLink("Pending", "Pending", null, new AjaxOptions
            {
                HttpMethod = "GET",
                       UpdateTargetId = "div1",
                       InsertionMode = InsertionMode.Replace
            }, new { @class = "nav-link active", data_toggle = "tab" })
                                </li>
                                <li class="nav-item">
                                    @Ajax.ActionLink("Approved", "Approved", null, new AjaxOptions
            {
             HttpMethod = "GET",
                     UpdateTargetId = "div1",
                     InsertionMode = InsertionMode.Replace
            }, new { @class = "nav-link", data_toggle = "tab" })
                                </li>
                                <li class="nav-item">
                                    @Ajax.ActionLink("Rejected", "Rejected", null, new AjaxOptions
            {
                HttpMethod = "GET",
                        UpdateTargetId = "div1",
                        InsertionMode = InsertionMode.Replace
            }, new { @class = "nav-link", data_toggle = "tab" })
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div id="div1"class="mt-0">
                @Html.Action("Pending")
            </div>
        </div>

    </div>
</div>
