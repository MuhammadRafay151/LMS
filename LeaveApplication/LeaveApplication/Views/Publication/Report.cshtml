@model System.Data.DataSet
@{
    ViewBag.Title = "Report";
    Layout = "~/Views/Shared/EmpProfileLayOut.cshtml";
}

<div class="container-fluid mt-5 ">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <table class="table table-hover table-striped ">
                        <thead>
                            <tr>
                                <th scope="col">
                                    Employee Name
                                    <select class="custom-select">
                                        <option value="" selected>All</option>
                                        @{
                                            foreach (LeaveApplication.Models.Department x in ViewBag.List2)
                                            {


                                                <option value="@x.DepartmentId">
                                                    @x.department
                                                </option>


                                            }
                                        }


                                    </select>
                                </th>
                                <th scope="col">Title</th>
                                <th scope="col">Publish Date</th>
                                <th scope="col">Authors</th>
                                <th scope="col">Attachment</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (System.Data.DataRow x in Model.Tables[0].Rows)
                            {
                                <tr>
                                    <td scope="col">@x[0]</td>
                                    <td scope="col">@x[1]</td>
                                    <td scope="col">@x[2]</td>
                                    <td scope="col">@x[3]</td>
                                    <td scope="col"><a href="/Publication/DownloadPub?FileId=@x[5]&PubId=@x[6]">@x[4]</a></td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

