<script>
    $(document).ready(function () {
        $('.delete').click(function () {
            var id = $(this).data("id");
            var row = $(this).parents('tr');
            $.ajax({
                type: "get",
                url: "/Dashboard/CloseAbsentNotification?id=" + id,
                success: function (ar) {

                    console.log(row);
                    $(row).fadeTo("slow", 0.4, function () {
                        $(row).remove();
                    })
                }, error: function () {
                    alert("cannot delete your row");
                }

            })

        });
    });
</script>