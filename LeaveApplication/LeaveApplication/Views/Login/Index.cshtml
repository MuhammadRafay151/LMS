</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-form-title" style="background-image: url(/Login_v15/images/bg-01.jpg);">
                    <span class="login100-form-title-1">
                        Sign In
                    </span>

                </div>
                @using (Html.BeginForm("Login", "LogIn", FormMethod.Post, new { @class = "login100-form validate-form" }))
                {
                    <div class="wrap-input100 validate-input m-b-26" data-validate="Username is required">
                        <span class="label-input100">Username</span>
                        @Html.TextBoxFor(m => m.EmployeeID, new { @class = "input100", placeholder = "Enter username" })
                        @*@Html.ValidationMessageFor(model => model.EmployeeID, "", new { @class = "text-danger" })*@

                        @*<input class="input100" type="text" name="username" placeholder="Enter username">*@
                        <span class="focus-input100"></span>


                    </div>

                    <div class="wrap-input100 validate-input m-b-18" data-validate="Password is required">
                        <span class="label-input100">Password</span>
                        @Html.PasswordFor(m => m.Password, new { @class = "input100", placeholder = "Enter password" })
                        @*<input class="input100" type="password" name="pass" placeholder="Enter password">*@
                        <span class="focus-input100"></span>
                    </div>
                    @Html.ValidationMessageFor(m => m.EmployeeID, "", new { @class = "text-danger" })
                    <div class="flex-sb-m w-full p-b-30">
                        <div class="contact100-form-checkbox">
                            <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                            <label class="label-checkbox100" for="ckb1">
                                Remember me
                            </label>
                        </div>

                        <div>
                            <a href="#" class="txt1">
                                Forgot Password?
                            </a>
                        </div>
                    </div>

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            Login
                        </button>
                    </div>
                }

            </div>
        </div>
    </div>

    <!--===============================================================================================-->
    <script src="~/Login_v15/vendor/jquery/jquery-3.2.1.min.js"></script>
