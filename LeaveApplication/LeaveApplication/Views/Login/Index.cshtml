                                    </a>
                                </div>
                            </div>
                            <p class="description text-center">Or Be Classical</p>
                            <div class="card-body">

                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons">account_circle</i>
                                        </span>
                                    </div>
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Enter username" })

                                </div>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons">lock_outline</i>
                                        </span>
                                    </div>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter password" })
                                </div>
                                <div class="d-flex justify-content-center">
                                    @Html.ValidationMessageFor(m => m.EmployeeID, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="footer text-center">

                                <input type="submit" class="btn btn-info btn-link btn-wd btn-lg" value="Login" />

                            </div>
                        </form>
                    </div>
                </div>
            </div>
