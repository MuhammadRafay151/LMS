
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/EmpProfileLayOut.cshtml";
}

<div id="div1" class="container" style="margin-top:5%">
    <div class="row  justify-content-center align-content-center vh-100">

        <div class="col-12  mb-3 ">
            <div class="card">
                <div class="card-header card-header-info">
                    <h5 class="card-title">Reset Password</h5>
                </div>
                <div class=" card-body">
                    <div class="card">
                        @using (Html.BeginForm("ChangePassword", "Profile", FormMethod.Post))
                        {
                        <div class="form-group d-flex  justify-content-center ">
                            <input type="text" required id="OldPassword" name="OldPassword" class="form-control " placeholder="Old Password" />
                             @Html.ValidationMessage("OldPassword", "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group d-flex  justify-content-center ">
                            <input type="text" required id="NewPassword" name="NewPassword" class="form-control " placeholder="New Password" />
                            @Html.ValidationMessage("NewPassword", "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group d-flex  justify-content-center ">
                            <input type="text" required id="ComfirmPassword" name="ComfirmPassword" class="form-control " placeholder="Confirm Password" />
                            @Html.ValidationMessage("ComfirmPassword", "", new { @class = "text-danger" })
                        </div>
                            <div class="form-group d-flex justify-content-center">
                                <input id="Submit1" class="btn btn-info-grd  ml-2" type="submit" value="Submit" />
                            </div>
                        }
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>




