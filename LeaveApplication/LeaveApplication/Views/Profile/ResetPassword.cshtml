
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/EmpProfileLayOut.cshtml";
}

<div id="div1" class="container mt-sm-5">
    <div class="row  justify-content-center align-items-center vh-100">

        <div class="col ">
            <div class="card">
                <div class="card-header card-header-info">
                    <h5 class="card-title">Reset Password</h5>
                </div>
                <div class=" card-body">

                    <div class="card  ">
                        @using (Html.BeginForm("ChangePassword", "Profile", FormMethod.Post))
                        {


                            <div class="  d-flex justify-content-center">
                                <div class="form-group bmd-form-group col-10 col-sm-6 col-md-6 col-lg-3 col-xl-3">
                                    <label for="OldPassword" class="text-center bmd-label-floating">Current Password</label>
                                    <input type="password" required id="CurrentPassword" name="CurrentPassword" class="form-control " />
                                    @Html.ValidationMessage("CurrentPassword", "", new { @class = "text-danger" })
                                </div>

                            </div>

                            <div class="d-flex justify-content-center">
                                <div class="form-group bmd-form-group col-10 col-sm-6 col-md-6 col-lg-3 col-xl-3">
                                    <label for="NewPassword" class="text-center bmd-label-floating">New Password</label>
                                    <input type="password" required id="NewPassword" name="NewPassword" class="form-control " />
                                    @Html.ValidationMessage("NewPassword", "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="d-flex justify-content-center">
                                <div class="form-group bmd-form-group col-10 col-sm-6 col-md-6 col-lg-3 col-xl-3">
                                    <label for="ComfirmPassword" class="text-center bmd-label-floating">Comfirm Password</label>
                                    <input type="password" required id="ComfirmPassword" name="ComfirmPassword" class="form-control " />
                                    @Html.ValidationMessage("ComfirmPassword", "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class=" d-flex justify-content-center">
                                <input id="Submit1" class="mr-1 btn btn-info-grd btn-round ml-2 col-10 col-sm-7 col-md-5 col-lg-3 col-xl-3" type="submit" value="Submit" />
                            </div>
                        }
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>




