@{
    ViewBag.Title = "Education";
    Layout = "~/Views/Shared/EmpProfileLayOut.cshtml";
}
@model LeaveApplication.Models.Education

<div class="modal fade" id="editedu">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Edit Education</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                @using (Html.BeginForm("somewhere", "inprofile", FormMethod.Post))
                {
                    <div class="d-flex justify-content-center">
                        <div class="form-group col-8 bmd-form-group">
                            <label for="DegreeTittle" class="text-center bmd-label-floating">DegreeTittle</label>
                            @Html.TextBoxFor(Model => Model.DegreeTittle, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(Model => Model.DegreeTittle, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="d-flex justify-content-center">
                        <div class="form-group col-8 bmd-form-group">
                            <label for="Field" class="text-center bmd-label-floating">Field</label>
                            @Html.TextBoxFor(Model => Model.Field, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(Model => Model.Field, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="d-flex justify-content-center">
                        <div class="form-group col-8 bmd-form-group">
                            <label for="Institute" class="text-center bmd-label-floating">Institute</label>
                            @Html.TextBoxFor(Model => Model.Institute, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(Model => Model.Institute, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="d-flex justify-content-center">
                        <div class="form-group col-8 bmd-form-group">
                            <label for="Year" class="text-center">Year</label>
                            <div class="input-group">
                                @Html.TextBoxFor(Model => Model.Year, new { @class = "form-control datetimepicker", required = "required", onfocusout = "DateSelect(this)" })
                                <div class="input-group-append">
                                    <span style="margin-left:-20px"><img id="i1" src="~/Images/calendar-clipart-w4.png" width="25" /></span>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(Model => Model.Year, "", new { @class = "text-danger" })
                        </div>
                    </div>

                }
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-link" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-info" data-dismiss="modal">Save</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addedu">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Education</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                @using (Html.BeginForm("somewhere", "inprofile", FormMethod.Post, new { autocomplete = "off" }))
                {
                    <div class="d-flex justify-content-center">
                        <div class="form-group col-8 bmd-form-group">
                            <label for="DegreeTittle" class="text-center bmd-label-floating">DegreeTittle</label>
                            @Html.TextBoxFor(Model => Model.DegreeTittle, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(Model => Model.DegreeTittle, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="d-flex justify-content-center">
                        <div class="form-group col-8 bmd-form-group">
                            <label for="Field" class="text-center bmd-label-floating">Field</label>
                            @Html.TextBoxFor(Model => Model.Field, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(Model => Model.Field, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="d-flex justify-content-center">
                        <div class="form-group col-8 bmd-form-group">
                            <label for="Institute" class="text-center bmd-label-floating">Institute</label>
                            @Html.TextBoxFor(Model => Model.Institute, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(Model => Model.Institute, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="d-flex justify-content-center">
                        <div class="form-group col-8 bmd-form-group">
                            <label for="Year" class="text-center">Year</label>
                            <div class="input-group">
                                @Html.TextBoxFor(Model => Model.Year, new { @class = "form-control datetimepicker", required = "required", onfocusout = "DateSelect(this)" })
                                <div class="input-group-append">
                                    <span style="margin-left:-20px"><img id="i1" src="~/Images/calendar-clipart-w4.png" width="25" /></span>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(Model => Model.Year, "", new { @class = "text-danger" })
                        </div>
                    </div>

                }
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-link" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-info" data-dismiss="modal">Save</button>
            </div>
        </div>
    </div>
</div>

<div class="container" style="margin-top:5%">
    <div class="row justify-content-center align-content-center">
        <div class="card">
            <div class="card-header card-header-info">
                <h3 class="card-title ">Education  <button class="btn btn-info-grd float-right" data-toggle="modal" data-target="#addedu">Add</button></h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">

                    <table class="table table-hover">
                        <thead>
                            <tr class="text-center">
                                <th>Degree Tittle</th>
                                <th>Field</th>
                                <th>Institute</th>
                                <th>Year</th>
                                <th>Edit</th>
                                <th>View</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="text-center">
                                <td>BE</td>
                                <td>Electric</td>
                                <td>UIT</td>
                                <td>2019</td>
                                <td>
                                    <button class="btn btn-info-grd" data-toggle="modal" data-target="#editedu">Edit</button>
                                </td>
                                <td>
                                    <button class="btn btn-info-grd" onclick="window.location.href='/Profile/ViewEducation'">View</button>
                                </td>
                                <td>
                                    <button class="btn btn-info-grd">Delete</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('.datetimepicker').datetimepicker({
            format: 'DD/MM/YYYY',

            icons: {
                time: "fa fa-clock-o",
                date: "fa fa-calendar",
                up: "fa fa-chevron-up",
                down: "fa fa-chevron-down",
                previous: 'fa fa-chevron-left',
                next: 'fa fa-chevron-right',
                today: 'fa fa-screenshot',
                clear: 'fa fa-trash',
                close: 'fa fa-remove',

            }

        });
    });
</script>